@{
    ViewData["Title"] = "Customers Page";
}
@model E_Commerce.Models.Customer
<h1>Add a new customer</h1>
@if (ViewBag.Messages != null)
    {
        <p>@ViewBag.Messages</p>
    }
<form asp-controller="Home" asp-action="Add" method="POST">
    <div class="form-group">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Customer Name:</label>
        <input class="form-control" asp-for="Name">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Customer Name</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var customer in ViewBag.AllCustomers)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.CreatedAt</td>
            <td>
                <form asp-controller="Home" asp-action="Remove" method="POST">
                    <input type="hidden" name="CustomerId" value="@customer.CustomerId">
                    <button type="submit" class="btn btn-primary">Remove</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>